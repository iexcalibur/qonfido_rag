# =============================================================================
# Qonfido RAG - Backend Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------

# Anthropic Claude API Key
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxx

# Cohere API Key (Optional - for reranking)
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment: development | staging | production
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Log Level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------

# Claude Model
CLAUDE_MODEL=claude-sonnet-4-5-20250514
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.3

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-m3

# Cohere Rerank Model
RERANK_MODEL=rerank-english-v3.0

# -----------------------------------------------------------------------------
# Search Configuration
# -----------------------------------------------------------------------------

# Default number of results
DEFAULT_TOP_K=5

# Enable reranking by default
ENABLE_RERANK=true

# Hybrid search weight (0 = pure lexical, 1 = pure semantic)
HYBRID_ALPHA=0.5

# RRF constant
RRF_K=60

# -----------------------------------------------------------------------------
# Data Paths
# -----------------------------------------------------------------------------

DATA_DIR=data/raw
FAQS_FILE=mutual_fund_faqs.csv
FUNDS_FILE=fund_performance.csv
